{
  "name": "koa-passport-jwt",
  "version": "1.0.0",
  "description": "Passport based authentication for Koa using JSON Web Tokens",
  "keywords": [
    "koa",
    "jwt",
    "passport",
    "jsonwebtoken",
    "passport-jwt",
    "koa-passport"
  ],
  "scripts": {
    "clean": "rm -rf ./build",
    "build:prod": "npm run clean && `npm bin`/webpack --env.prod -p",
    "watch": "npm run clean && `npm bin`/webpack --env.dev --watch --verbose --hot",
    "start": "node ./build/server.js"
  },
  "author": "Siddharth Jain <sid26@ucla.edu>",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidjain26/koa-passport-jwt"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "uglify-js": "github:mishoo/UglifyJS2#harmony",
    "webpack": "^2.1.0-beta.14"
  },
  "dependencies": {
    "es6-promisify": "^4.1.0",
    "jsonwebtoken": "^7.1.9",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-jwt": "^2.0.1",
    "koa-logger": "^2.0.0",
    "koa-passport": "^3.0.0-rc.1",
    "koa-route": "^3.1.0",
    "passport-local": "^1.0.0"
  }
